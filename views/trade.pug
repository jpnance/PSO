doctype html
html
	head
		link(rel='stylesheet' href='/css/bootstrap.min.css')
		link(rel='stylesheet' href='../trade.css')
		script(src='/js/jquery.min.js')
		script(src='/js/umd/popper.min.js')
		script(src='/js/bootstrap.min.js')
		script
			| $(function() { $('[data-toggle="tooltip"]').tooltip(); });
		script(src='../trade.js')

		title Trade Machine

	body
		div.container
			h1.text-center Trade Machine

		div.container
			h4 Who's Involved?

			each franchise, i in franchises
				div.form-check.form-check-inline.col-3
					input.form-check-input(type="checkbox" id="franchise-" + i value=franchise)
					label.form-check-label(for="franchise-" + i) #{franchise}
