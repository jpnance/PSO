doctype html
html
	head
		meta(charset='utf-8')
		meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')

		link(rel='stylesheet' href='/css/bootstrap.min.css')
		block styles

		script(src='/js/jquery.min.js')
		script(src='/js/bootstrap.min.js')

		title #{pageTitle || 'PSO'}

	body
		nav.navbar.navbar-expand-md.navbar-dark.bg-dark
			div.container-fluid
				a.navbar-brand(href='/league') PSO
				button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
					span.navbar-toggler-icon
				div#navbarNav.collapse.navbar-collapse
					ul.navbar-nav.mr-auto
						li.nav-item(class=(activePage === 'league' ? 'active' : ''))
							a.nav-link(href='/league') League
						li.nav-item(class=(activePage === 'draft' ? 'active' : ''))
							a.nav-link(href='/draft') Draft
						li.nav-item(class=(activePage === 'calendar' ? 'active' : ''))
							a.nav-link(href='/calendar') Calendar
					ul.navbar-nav
						li.nav-item(class=(activePage === 'admin' ? 'active' : ''))
							a.nav-link(href='/admin') Admin

		block content

		block scripts
