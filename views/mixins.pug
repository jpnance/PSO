//- Sequential navigation with arrows
//- Usage: +sequentialNav({ items, current, urlPattern, quickItems?, jumpLabel?, labelFn?, urlSuffix? })
//- Or: +sequentialNav({ prev, next, current, urlPattern, labelFn? }) for simple prev/next
//- Without quickItems: dropdown in center between arrows
//- With quickItems: pills in center, optional jump dropdown on left
mixin sequentialNav(opts)
	- var items = opts.items || []
	- var current = opts.current
	- var urlPattern = opts.urlPattern !== undefined ? opts.urlPattern : '?value='
	- var urlSuffix = opts.urlSuffix || ''
	- var quickItems = opts.quickItems || null
	- var jumpLabel = opts.jumpLabel || null
	- var labelFn = opts.labelFn || function(v) { return v }
	-
		// Support direct prev/next or calculate from items
		var prevItem, nextItem;
		if (opts.prev !== undefined || opts.next !== undefined) {
			prevItem = opts.prev;
			nextItem = opts.next;
		} else {
			var currentIdx = items.indexOf(current);
			prevItem = currentIdx > 0 ? items[currentIdx - 1] : null;
			nextItem = currentIdx < items.length - 1 ? items[currentIdx + 1] : null;
		}
		// Items not in quickItems (for jump dropdown)
		var jumpItems = quickItems ? items.filter(function(i) { return quickItems.indexOf(i) === -1 }) : []
		// Helper to build URL
		var buildUrl = function(item) { return urlPattern + item + urlSuffix }
		// Simple mode: no items, just prev/next
		var simpleMode = items.length === 0 && (opts.prev !== undefined || opts.next !== undefined)
	div.seq-nav
		if simpleMode
			//- Mode: simple prev/next with current label (prev/next are full URLs)
			a.seq-nav__arrow(href=prevItem ? prevItem : null class=(!prevItem ? 'seq-nav__arrow--disabled' : ''))
				span ‹
			span.seq-nav__current= labelFn(current)
			a.seq-nav__arrow(href=nextItem ? nextItem : null class=(!nextItem ? 'seq-nav__arrow--disabled' : ''))
				span ›
		else if quickItems
			//- Mode: pills with optional jump dropdown (inside arrows)
			a.seq-nav__arrow(href=prevItem != null ? buildUrl(prevItem) : null class=(prevItem == null ? 'seq-nav__arrow--disabled' : ''))
				span ‹
			if jumpLabel && jumpItems.length > 0
				- var jumpActive = jumpItems.indexOf(current) !== -1
				select.seq-nav__jump(class=(jumpActive ? 'seq-nav__jump--active' : '') onchange='if(this.value) window.location.href="' + urlPattern + '"+this.value+"' + urlSuffix + '"')
					option(value='' selected=!jumpActive)= jumpLabel
					each item in jumpItems
						option(value=item selected=(item === current))= labelFn(item)
			each item in quickItems
				a.seq-nav__pill(href=buildUrl(item) class=(item === current ? 'seq-nav__pill--active' : ''))= labelFn(item)
			a.seq-nav__arrow(href=nextItem != null ? buildUrl(nextItem) : null class=(nextItem == null ? 'seq-nav__arrow--disabled' : ''))
				span ›
		else
			//- Mode: dropdown in center
			a.seq-nav__arrow(href=prevItem != null ? buildUrl(prevItem) : null class=(prevItem == null ? 'seq-nav__arrow--disabled' : ''))
				span ‹
			select.seq-nav__dropdown(onchange='if(this.value) window.location.href="' + urlPattern + '"+this.value+"' + urlSuffix + '"')
				each item in items
					option(value=item selected=(item === current))= labelFn(item)
			a.seq-nav__arrow(href=nextItem != null ? buildUrl(nextItem) : null class=(nextItem == null ? 'seq-nav__arrow--disabled' : ''))
				span ›

//- Trade asset icon based on type
//- Usage: +tradeAssetIcon(asset.type)
mixin tradeAssetIcon(type)
	span.asset-icon(class="icon-" + type)
		if type === 'player'
			i.fa.fa-user
		else if type === 'pick'
			i.fa.fa-ticket
		else if type === 'cash'
			i.fa.fa-dollar
		else if type === 'rfa'
			i.fa.fa-file-text-o
		else
			i.fa.fa-times

//- Trade asset content (player, pick, cash, etc.)
//- Usage: +tradeAssetContent(asset)
mixin tradeAssetContent(asset)
	span.asset-content(class="icon-" + asset.type)
		span.asset-details
			if (asset.type === 'player' || asset.type === 'rfa') && asset.hasOwnProperty('playerName')
				span.asset-name
					| #{asset.playerName}
					if asset.positions && asset.positions.length > 0
						|  
						+positionBadge(asset.positions)
				span.asset-meta
					| #{asset.contractInfo}
					if asset.ambiguous
						span.ambiguous-icon(title="Contract years couldn't be definitively determined" data-toggle="tooltip")
							i.fa.fa-question-circle
			else if asset.type === 'pick' && asset.hasOwnProperty('pickMain')
				span.asset-text
					strong #{asset.pickMain}
					|  #{asset.pickContext}
			else if asset.type === 'cash' && asset.hasOwnProperty('cashMain')
				span.asset-text
					strong #{asset.cashMain}
					|  #{asset.cashContext}
			else
				span.asset-text
					strong #{asset.display}
					if asset.ambiguous
						span.ambiguous-icon(title="Contract years couldn't be definitively determined" data-toggle="tooltip")
							i.fa.fa-question-circle
		if asset.notes && asset.notes.length > 0
			each note in asset.notes
				if note.type === 'chain'
					span.asset-note
						each item, idx in note.items
							if idx > 0
								if item.type === 'outcome'
									|  → 
								else
									|  #{note.separator} 
							if item.type === 'outcome'
								| #{item.text}
							else if item.isCurrent
								strong ##{item.tradeNumber}
							else
								a(href="/trades/" + item.tradeNumber) ##{item.tradeNumber}
				else if note.type === 'outcome'
					span.asset-note → #{note.text}

//- Single trade asset list item
//- Usage: +tradeAsset(asset)
mixin tradeAsset(asset)
	li
		+tradeAssetIcon(asset.type)
		+tradeAssetContent(asset)

//- Full trade party with assets
//- Usage: +tradeParty(party)
mixin tradeParty(party)
	div.party
		span.party-name #{party.franchiseName}
		if party.usePlural
			|  receive:
		else
			|  receives:
		ul.asset-list
			if party.assets && party.assets.length > 0
				each asset in party.assets
					+tradeAsset(asset)
			else
				li
					span.asset-icon.icon-nothing
						i.fa.fa-times
					span.asset-content.icon-nothing
						span.asset-text Nothing

